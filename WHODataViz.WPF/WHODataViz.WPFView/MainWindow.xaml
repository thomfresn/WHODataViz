<Window x:Class="WHODataViz.WPFView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfView="clr-namespace:WHODataViz.WPFView"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        d:DataContext="{d:DesignInstance IsDesignTimeCreatable=True, Type={x:Type wpfView:MainDesignTimeViewModel}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" ItemsSource="{Binding AvailableIndicators }" SelectedItem="{Binding SelectedIndicator, Mode=TwoWay}"/>
        <DataGrid Grid.Row="1" ItemsSource="{Binding IndicatorData}"></DataGrid>
    </Grid>
</Window>
